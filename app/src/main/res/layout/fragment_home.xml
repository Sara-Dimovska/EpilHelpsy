<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <Button
        android:id="@+id/btn_journal"
        style="?android:textAppearanceSmall"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imgIcon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:background="@color/purpleveryLight"
        android:text="Help now"
        android:textColor="@color/purpleDark"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/btn_journal"
        android:background="#763996">

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginEnd="96dp"
        android:text="Motion detection:" />


    <ImageButton
        android:id="@+id/onOff"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:background="@drawable/off"
        android:contentDescription="@string/ofonsko" />
    </RelativeLayout>


</RelativeLayout>